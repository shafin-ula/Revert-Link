{
  "name": "Resource",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Resource title"
    },
    "description": {
      "type": "string",
      "description": "Resource description"
    },
    "category": {
      "type": "string",
      "enum": [
        "quran",
        "hadith",
        "prayer",
        "fasting",
        "charity",
        "pilgrimage",
        "daily_life",
        "converts_guide"
      ],
      "description": "Resource category"
    },
    "resource_type": {
      "type": "string",
      "enum": [
        "article",
        "video",
        "audio",
        "book",
        "course",
        "app"
      ],
      "description": "Type of resource"
    },
    "url": {
      "type": "string",
      "description": "Resource URL"
    },
    "author": {
      "type": "string",
      "description": "Resource author"
    },
    "difficulty_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "description": "Difficulty level"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Community rating"
    },
    "submitted_by": {
      "type": "string",
      "description": "User who submitted this resource"
    }
  },
  "required": [
    "title",
    "description",
    "category",
    "resource_type"
  ]
}
