{
  "name": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "description": "Event description"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "time": {
      "type": "string",
      "description": "Event time"
    },
    "location": {
      "type": "string",
      "description": "Event location"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "study_circle",
        "iftar",
        "social_gathering",
        "workshop",
        "charity"
      ],
      "description": "Type of event"
    },
    "organizer_name": {
      "type": "string",
      "description": "Name of organizer"
    },
    "contact_info": {
      "type": "string",
      "description": "Contact information"
    },
    "max_attendees": {
      "type": "number",
      "description": "Maximum number of attendees"
    },
    "current_attendees": {
      "type": "number",
      "default": 0,
      "description": "Current number of registered attendees"
    }
  },
  "required": [
    "title",
    "description",
    "date",
    "time",
    "location",
    "event_type"
  ]
}
